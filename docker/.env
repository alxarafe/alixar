# NGINX Configuration
HTTPD_CONTAINER=alixar_httpd
HTTPD_RESTART=on-failure
HTTPD_HOST=localhost
HTTPD_CONFIG_DIRECTORY=./etc/httpd/config
HTTPD_LOG_DIRECTORY=./etc/httpd/log
HTTPD_PORT=8080

# PHP
PHP_VERSION=8.3-fpm
PHP_CONTAINER=alixar_php
PHP_RESTART=on-failure
PHP_DIRECTORY=./etc/php
PHP_CONFIG_DIRECTORY=./etc/php/config
PHP_XDEBUG_MODE=debug

# General
PROJECT_NAME=alixar
CODE_DIRECTORY=../
NETWORK=alixar_network
USER_ID=1000
GROUP_ID=1000
CACHE_DRIVER=redis

# MYSQL
# common
MYSQL_VERSION=8.0
MYSQL_RESTART=on-failure
MYSQL_LOG_ENABLED=true
MYSQL_DIRECTORY=./etc/db/mysql

REDIS_CONTAINER=alixar_redis
REDIS_PORT=6379
REDIS_VERSION=latest

# MySQL
MYSQL_CONTAINER=alixar_db
MYSQL_DATABASE=alixar
MYSQL_ROOT_PASSWORD=root
MYSQL_USER=dbuser
MYSQL_PASSWORD=dbuser
MYSQL_PORT=33060
MYSQL_DOCKERFILE_DIRECTORY=./etc/db/mysql/real
MYSQL_INIT_DB_DIRECTORY=./etc/db/mysql/real/init
MYSQL_CONFIG_DB_DIRECTORY=./etc/db/mysql/real/config

# MySQL testing
MYSQL_TEST_CONTAINER=alixar_db_test
MYSQL_TEST_DATABASE=alixar_test
MYSQL_TEST_ROOT_PASSWORD=root
MYSQL_TEST_USER=dbuser
MYSQL_TEST_PASSWORD=dbuser
MYSQL_TEST_PORT=33061
MYSQL_TEST_DOCKERFILE_DIRECTORY=./etc/db/mysql/test
MYSQL_TEST_INIT_DB_DIRECTORY=./etc/db/mysql/test/init
MYSQL_TEST_CONFIG_DB_DIRECTORY=./etc/db/mysql/test/config

# Mongo
# Common
MONGO_IMAGE=mongo:4.2.0-bionic
MONGO_RESTART=always
MONGO_INITDB_ROOT_USERNAME=mongo
MONGO_INITDB_ROOT_PASSWORD=mongo

# Mongo Settings
MONGO_CONTAINER=alixar_mongo
MONGO_PORT=27017
MONGO_INITDB_DATABASE=alixar_db

# Mongo test
MONGO_CONTAINER_TEST=alixar_mongo_test
MONGO_PORT_TEST=57017
MONGO_INITDB_DATABASE_TEST=alixar_db_test

# Composer
COMPOSER_CONTAINER=alixar_composer
COMPOSER_CONFIG_DIRECTORY=./etc/composer

# MemCached
MEMCACHED_CONTAINER=alixar_memcached
MEMCACHED_RESTART=on-failure